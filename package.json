{
  "name": "research-nest-nats-microservice",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "dev:all": "npx concurrently -c \"cyan.bold,blue.bold,green.bold,magenta.bold\" \"yarn start:dev api\" \"yarn start:dev user\" \"yarn start:dev product\" \"yarn start:dev order\"",
    "build:all": "yarn build api && yarn build user && yarn build product && yarn build order",
    "start:all": "npx concurrently -c \"cyan.bold,blue.bold,green.bold,magenta.bold\" \"yarn start api\" \"yarn start user\" \"yarn start product\" \"yarn start order\"",
    "typeorm:user": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./dist/apps/user/apps/user/src/database/config/typeorm.config.js",
    "db:user:migrate:run": "yarn build user && yarn typeorm:user migration:run",
    "db:user:migrate:generate": "sh -c 'yarn typeorm:user migration:generate ./apps/user/src/database/migrations/$0'",
    "db:user:migrate:revert": "yarn typeorm:user migration:revert",
    "db:user:seed": "yarn build user && ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./dist/apps/user/apps/user/src/database/config/typeorm.config.js",
    "typeorm:product": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./dist/apps/product/apps/product/src/database/config/typeorm.config.js",
    "db:product:migrate:run": "yarn build product && yarn typeorm:product migration:run",
    "db:product:migrate:generate": "sh -c 'yarn typeorm:product migration:generate ./apps/product/src/database/migrations/$0'",
    "db:product:migrate:revert": "yarn typeorm:product migration:revert",
    "db:product:seed": "yarn build product && ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./dist/apps/product/apps/product/src/database/config/typeorm.config.js",
    "typeorm:order": "npx ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./dist/apps/order/apps/order/src/database/config/typeorm.config.js",
    "db:order:migrate:run": "yarn build order && yarn typeorm:order migration:run",
    "db:order:migrate:generate": "sh -c 'yarn typeorm:order migration:generate ./apps/order/src/database/migrations/$0'",
    "db:order:migrate:revert": "yarn typeorm:order migration:revert",
    "db:order:seed": "yarn build order && ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./dist/apps/order/apps/order/src/database/config/typeorm.config.js",
    "db:all:migrate:run": "yarn db:user:migrate:run && yarn db:product:migrate:run && yarn db:order:migrate:run",
    "db:all:migrate:revert": "yarn db:user:migrate:revert && yarn db:product:migrate:revert && yarn db:order:migrate:revert",
    "db:all:seed": "yarn db:user:seed && yarn db:product:seed && yarn db:order:seed",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@dicebear/collection": "^9.2.1",
    "@dicebear/converter": "^9.2.1",
    "@dicebear/core": "^9.2.1",
    "@faker-js/faker": "^9.0.3",
    "@nestjs/bull": "^10.2.1",
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.4.5",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/typeorm": "^10.0.2",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.3",
    "cache-manager": "^5.7.6",
    "cache-manager-ioredis-yet": "^2.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "ioredis": "^5.4.1",
    "nats": "^2.28.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.6.2",
    "typeorm-naming-strategies": "^4.1.0",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@utils(|/.*)$": "<rootDir>/libs/@util/$1",
      "^@commons(|/.*)$": "<rootDir>/libs/@common/$1",
      "^@contracts(|/.*)$": "<rootDir>/libs/@contract/$1",
      "^@infrastructures(|/.*)$": "<rootDir>/libs/@infrastructure/$1",
      "^@configs/app-config(|/.*)$": "<rootDir>/libs/app-config/src/$1",
      "^@diceb/dicebear(|/.*)$": "<rootDir>/libs/dicebear/src/$1"
    }
  }
}
